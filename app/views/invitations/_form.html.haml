= form_for @invitation do |f|
  -if @invitation.errors.any?
    #error_explanation
      %h2= "#{pluralize(@invitation.errors.count, "error")} prohibited this invitation from being saved:"
      %ul
        - @invitation.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :first
    = f.text_field :first
  .field
    = f.label :last
    = f.text_field :last
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :group_id
    = f.number_field :group_id
  .field
    = f.label :inviter_id
    = f.number_field :inviter_id
  .field
    = f.label :message
    = f.text_area :message
  .actions
    = f.submit 'Save'
