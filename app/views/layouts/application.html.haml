- ie_html :class => "no-js", :lang => "en" do
	= render "head"

	%body{ :class => "#{ controller.controller_name }" }
		= render "header"

		#main{ :role => "main" }
			= render "flashes"
			= yield

		= render "footer"

		= javascript_include_tag "application"
		= javascript_include_tag controller_name
		= requirejs_include_tag "main"